{
  "lock": false,
  "githooks": {
    "pre-commit": "check"
  },
  "tasks": {
    "dev": "deno run --watch main.ts",
    "check": "deno fmt --check && deno lint"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "exclude": ["test/data/"]
  }
}
